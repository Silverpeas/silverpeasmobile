<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:m="urn:import:com.gwtmobile.ui.client.widgets"	
	xmlns:f="urn:import:com.silverpeas.mobile.client.components"
	xmlns:u="urn:import:com.silverpeas.mobile.client.components.upload">
	
	<ui:with field='msg' type='com.silverpeas.mobile.client.apps.media.resources.GalleryMessages'/>
	<ui:with field='globalMsg' type='com.silverpeas.mobile.client.resources.ApplicationMessages'/>
	<ui:with field='ressources' type='com.silverpeas.mobile.client.apps.media.resources.GalleryResources'/>
	<ui:import field='com.gwtmobile.ui.client.widgets.ListItem.ShowArrow.*' />

	<ui:style>		

		.contentH {
			-webkit-box-pack: center;
			-webkit-box-align: center;
			width: 100%;
			height: 100%;
		}
		
		.contentV {
			-webkit-box-pack: center;
			-webkit-box-align: center;
			height: 100%;
			width: 50%; /* Deux colonnes */
		}
		
		.gallery {
			margin-left: 0.5em;
			margin-right: 0.5em;
		}
	</ui:style>

	<g:HTMLPanel ui:field="htmlPanel">
		<m:HeaderPanel leftButton="Back" ui:field="header">
			<g:Label horizontalAlignment="center" text="{msg.title}"></g:Label>			
		</m:HeaderPanel>		
		
		<m:ListPanel selectable="true" ui:field="place">
			<m:ListItem displayArrow="{Visible}">				
				<m:HorizontalPanel>
					<g:Label styleName="{ressources.css.galleries}"></g:Label>
					<g:Label styleName="{style.gallery}" text='{msg.currentGallery}'></g:Label>
					<g:Label ui:field="gallery">-</g:Label>
				</m:HorizontalPanel>
			</m:ListItem>
			<m:ListItem displayArrow="{Hidden}">
				<m:HorizontalPanel>
					<g:Label styleName="{ressources.css.albums}"></g:Label>
					<m:DropDownList ui:field="albums"></m:DropDownList>
				</m:HorizontalPanel>
			</m:ListItem>
		</m:ListPanel>		
		
		<m:SlidePanel rotate="true">
			<m:Slide>
				<m:HorizontalPanel ui:field="content" secondaryStyle="{style.contentH}">
					<m:VerticalPanel secondaryStyle="{style.contentV}">
						
						
						<u:TakePicture text="{msg.takePicture}" icon="{ressources.camera}" ui:field="takePicture" height="50%"/>
						

					</m:VerticalPanel>
					<m:VerticalPanel secondaryStyle="{style.contentV}">

					</m:VerticalPanel>
				</m:HorizontalPanel>			
			</m:Slide>
		</m:SlidePanel>
		
		<m:HeaderPanel>	 </m:HeaderPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 